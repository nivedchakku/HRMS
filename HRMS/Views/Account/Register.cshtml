@using HRMS.Entity.Models;
@model Employee


@{
    Layout = "_MenuLayout";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://raw.githack.com/ttskch/select2-bootstrap4-theme/master/dist/select2-bootstrap4.css" rel="stylesheet">

<div class="container p-40" style="background-color:white; border-radius:5px;">
    <h3 class="mb-5">Employee Registration</h3>
    <form enctype="multipart/form-data" asp-action="Register" method="POST">
        <div class="d-flex justify-content-between">
            <div class="form-group" style="width:45%">
                <label asp-for="firstname" class="form-label"></label>
                <input asp-for="firstname" class="form-control" />
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:45%">
                <label asp-for="lastname" class="form-label"></label>
                <input asp-for="lastname" class="form-control" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group" style="width:45%">
                <label asp-for="email" class="form-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:45%">
                <label asp-for="mobile" class="form-label"></label>
                <input asp-for="mobile" class="form-control" />
                <span asp-validation-for="mobile" class="text-danger"></span>
            </div>
        </div><br />
        <div class="form-group" style="width:50%">
            <label asp-for="gender" class="form-label" style="margin-right:30px;"></label>
            <input asp-for="gender" type="radio" class="form-radio" value="Male" style="margin-left:30px;"></ />Male
            <input asp-for="gender" type="radio" class="form-radio" value="Female" style="margin-left:30px;"></ />Female
            <span asp-validation-for="gender" class="text-danger"></span>

            </div>
        
        <div class="d-flex justify-content-between">
            <div style="width:45%">
                <div class=" custom-file">
                    <label asp-for="image" class="custom-file-label"></label>
                    <input class="form-control" asp-for="imagepath" class="custom-file-input">
                </div><br />
                <div class="form-group">
                    <label asp-for="dob" class="form-label"></label>
                    <input asp-for="dob" class="form-control" />
                    <span asp-validation-for="dob" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="width:45%">
                <label asp-for="address" class="form-label"></label>
                <textarea asp-for="address" rows="4" class="mt-3 form-control">

                </textarea>
                <span asp-validation-for="address" class="text-danger"></span>

            </div>
        </div>

        <div class="d-flex justify-content-between">
            <div class="col-3">
                <select asp-for="salaryid" class="form-select" id="Salary">
                    <option value="">---Select Salary Pakage---</option>
                    @foreach (var sal in ViewBag.Salary)
                    {
                        <option value="@sal.salaryid">@sal.salary</option>
                    }
                </select>
                <span asp-validation-for="salaryid" class="text-danger"></span>

            </div>
            <div class="col-3">
                <select asp-for="departmentid" class="form-select" id="Department">
                    <option value="">---Select Department---</option>
                    @foreach (var dept in ViewBag.Department)
                    {
                        <option value="@dept.deptid">@dept.deptname</option>
                    }
                </select>
                <span asp-validation-for="departmentid" class="text-danger"></span>

            </div>
            <div class="col-3">
                <select asp-for="positionid" class="form-select" id="Position">
                    <option value="">---Select Position---</option>
                    @foreach (var pos in ViewBag.Position)
                    {
                        <option value="@pos.positionid">@pos.positionname</option>
                    }
                </select>
                <span asp-validation-for="positionid" class="text-danger"></span>

            </div>
        </div>

        <div class="d-flex justify-content-between">
            <div class="form-group" style="width:45%">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:45%">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>


        <br />
        <input class="btn btn-outline-primary" type="submit" value="Register" />
    </form>
</div>



@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");

    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {


            $('#Salary').select2({
                theme: "bootstrap4",
                placeholder: "Name",
                allowClear: true
            });
            $('#Department').select2({
                theme: "bootstrap4",
                placeholder: "Name",
                allowClear: true
            });
            $('#Position').select2({
                theme: "bootstrap4",
                placeholder: "Name",
                allowClear: true
            });
        });
    </script>
        }