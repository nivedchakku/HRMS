@using Microsoft.AspNetCore.Identity;

@inject UserManager<IdentityUser> userManager
@inject SignInManager<IdentityUser> signInManager

<ul class="navbar-nav flex-grow-1 ml-1">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangePassword">Welcome @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">SignIn</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">SignUp</a>
        </li>
    }
</ul>